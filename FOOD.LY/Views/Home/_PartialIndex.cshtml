@using FOOD.LY.BE;
<div class="row">
	<!--Grid column: Content-->
	<div class="col-md-8">

		<div class="form-control" style="border: none;">
			<div class="row" style="padding: 25px;">
				@try
				{
					if (Session[SessionKeys.FULLNAME].ToString() != "" || Session[SessionKeys.FULLNAME].ToString() != null)
					{
						<div class="col-md-6">
							<a href="@Url.Action("","AddRecipe")">
								<i class="fas fa-edit"></i> Start a Receipe
							</a>
						</div>
						<div class="col-md-6" style="text-align: right;">
							<a href="@Url.Action("","AddRecipe")">
								#Hungry | #FoodisLife | #Food.LY
							</a>
						</div>
					}
					else
					{

						<div class="col-md-6">
							<a data-toggle="modal" href="javascript:void(0)" data-target="#modalLRForm">
								<i class="fas fa-edit"></i> Start a Receipe
							</a>
						</div>
						<div class="col-md-6" style="text-align: right;">
							<a data-toggle="modal" href="javascript:void(0)" data-target="#modalLRForm">
								#Hungry | #FoodisLife | #Food.LY
							</a>
						</div>
					}
				}
				catch (Exception)
				{
					<div class="col-md-6">
						<a data-toggle="modal" href="javascript:void(0)" data-target="#modalLRForm">
							<i class="fas fa-edit"></i> Start a Receipe
						</a>
					</div>
					<div class="col-md-6" style="text-align: right;">
						<a data-toggle="modal" href="javascript:void(0)" data-target="#modalLRForm">
							#Hungry | #FoodisLife | #Food.LY
						</a>
					</div>
				}

			</div>
		</div>

	</div>

	<div class="col-md-4 text-center" style="padding: 25px;">
		@try
		{
			if (Session[SessionKeys.FULLNAME].ToString() != "" || Session[SessionKeys.FULLNAME].ToString() != null)
			{
				<a href="@Url.Action("","Profile")">Profile 25 % Completed</a>
				<br />
				<div class="progress">
					<div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			}
			else
			{
				<a class="nav-link waves-effect" data-toggle="modal" data-target="#modalLRForm">
					<i class="fas fa-utensils"></i> <span class="clearfix d-none d-sm-inline-block">Register Now</span>
				</a>
			}
		}
		catch (Exception)
		{
			<a class="nav-link waves-effect" data-toggle="modal" data-target="#modalLRForm">
				<i class="fas fa-utensils"></i> <span class="clearfix d-none d-sm-inline-block">Register Now</span>
			</a>
		}
	</div>

</div>
<hr class="my-5">